{
  "name": "${localWorkspaceFolderBasename}",
  "init": true,
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "TZ": "${localEnv:TZ:UTC}",
      "CLAUDE_CODE_VERSION": "latest",
      "CODEX_VERSION": "latest",
      "GEMINI_CLI_VERSION": "latest"
    }
  },
  "runArgs": [
    "--name",
    "${localWorkspaceFolderBasename}"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "anthropic.claude-code",
        "openai.chatgpt"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "terminal.integrated.defaultProfile.linux": "fish",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "fish": {
            "path": "fish"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "node",
  "postCreateCommand": "uv run --no-sync /workspace/.devcontainer/post_install.py",
  "mounts": [
    "source=commandhistory,target=/commandhistory,type=volume",
    "source=claude-code-config,target=/home/node/.claude,type=volume",
    "source=codex-config,target=/home/node/.codex,type=volume",
    "source=gemini-config,target=/home/node/.gemini,type=volume",
    "source=gh-config,target=/home/node/.config/gh,type=volume",
    "source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.config/git/ignore,target=${localEnv:HOME}/.config/git/ignore,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.claude/skills,target=/home/node/.claude/skills,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.claude/commands,target=/home/node/.claude/commands,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.claude/CLAUDE.md,target=/home/node/.claude/CLAUDE.md,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.codex/skills,target=/home/node/.codex/skills,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.codex/prompts,target=/home/node/.codex/prompts,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.codex/AGENTS.md,target=/home/node/.codex/AGENTS.md,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.gemini/commands,target=/home/node/.gemini/commands,type=bind,consistency=cached,readonly",
    "source=${localEnv:CAGE_SCREENSHOTS_DIR},target=/home/node/Screenshots,type=bind,consistency=cached,readonly"
  ],
  "containerEnv": {
    "NODE_OPTIONS": "--max-old-space-size=4096",
    "CLAUDE_CONFIG_DIR": "/home/node/.claude",
    "CODEX_HOME": "/home/node/.codex"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace"
}
